<h1><%= @list.name %></h1>
<p><%= link_to "delete this list", list_path(@list), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %></p>
<%= cl_image_tag @list.photo.key, height: 300 %>
<p><%= link_to 'Back to all lists', root_path %></p>
<p><%= link_to 'Add a movie to your list', new_list_bookmark_path(@list) %></p>
<% @list.movies.each do |movie| %>
    <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
    <div class="card">
      <h2><%= movie.title %></h2>
      <p><%= bookmark.comment %></p>
    </div>
<% end %>
